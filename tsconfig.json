{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES6",
        "noImplicitAny": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "allowJs": true,
        "outDir": "./dist",
        "types": [
            "node"
        ],
    },
    "include": [
        "src/**/*",
        "nonogram-db/**/*"
    ],
    "exclude": [
        "node_modules",
        "nonogram-db"
    ],
}